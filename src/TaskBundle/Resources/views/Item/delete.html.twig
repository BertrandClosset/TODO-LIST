{% extends "TaskBundle::layout.html.twig" %}

{% block title %}
  Delete a task - {{ parent() }}
{% endblock %}

{% block task_body %}

   <h2>Delete a Task</h2>
   <p>Do you really want to delete the task "{{task.title}}" ?</p>
   <form action="{{ path('task_delete', {'id': task.id}) }}" method="post">
    <a href="{{ path('task_view', {'id': task.id}) }}" class="btn btn-default">
      <i class="glyphicon glyphicon-chevron-left"></i>
      Back to the task
    </a>
    <input type="submit" value="Delete" class="btn btn-danger" />
    {{ form_rest(form) }}
  </form>

{% endblock %}