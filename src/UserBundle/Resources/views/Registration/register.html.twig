
{% extends "HeartBundle::layout.html.twig" %}
{% block title %}
  Registration - {{ parent() }}
{% endblock %}
{% block body %}

<h2>Registration</h2>
{{ form_start(form) }}
    {{ form_row(form.username) }}
    {{ form_row(form.email) }}
    {{ form_row(form.plainPassword.first) }}
    {{ form_row(form.plainPassword.second) }}

    <button class="btn btn-primary" type="submit">Register</button>
{{ form_end(form) }}
<br />
<a class="btn btn-default" href="{{path('heart_homepage')}}">Go back</button>
<a href="{{path('login')}}">Already registered ?</a>
{% endblock %}